<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.AddStudentDialog">
   <children>
      <Button fx:id="add_student_btn"
              layoutX="327.0" layoutY="159.0"
              mnemonicParsing="false"
              onMouseClicked="#addStudent"
              text="Add Student"
              AnchorPane.bottomAnchor="20.0"
              AnchorPane.rightAnchor="20.0" />

      <Label layoutX="14.0" layoutY="14.0"
             text="First Name:"
             AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="100.0" />

      <TextField fx:id="input_first_name"
                 layoutX="50.0" layoutY="118.0"
                 prefHeight="26.0" prefWidth="200.0"
                 promptText="Enter Student First Name" />

      <Label layoutX="50.0" layoutY="144.0"
             text="Last Name:"
             AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="175.0" />

      <TextField fx:id="input_last_name"
                 layoutX="50.0" layoutY="193.0"
                 prefHeight="26.0" prefWidth="200.0"
                 promptText="Enter Student Last Name"
                 AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="193.0" />

      <Label layoutX="50.0" layoutY="219.0"
             text="Age:"
             AnchorPane.leftAnchor="50.0" AnchorPane.topAnchor="248.0" />

      <ComboBox fx:id="combo_age"
                editable="true"
                layoutX="84.0" layoutY="244.0"
                prefHeight="28.0" prefWidth="165.0"
                promptText="Select Student Age"
                AnchorPane.leftAnchor="84.0" AnchorPane.rightAnchor="51.0" AnchorPane.topAnchor="244.0" />

   </children>
</AnchorPane>
